<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <% if current_user %>
      <%= "Logged in as #{current_user.username}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Sign Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Home', root_path %> | <%= link_to 'Sign In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    <hr>
    
    <% if notice %>
      <%= notice %>
    <% end %>
  
    <% if alert %>
      <%= alert %>
    <% end %>
    <%= yield %>
  </body>
</html>
